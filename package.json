{
  "name": "todo-list",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "deploy": "zx ./scripts/deploy.mjs",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "db:generate-client": "prisma generate",
    "db:migrate": "prisma migrate",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "debug": "nest start --debug --watch",
    "dev": "nest start --watch",
    "lint": "biome check --write --no-errors-on-unmatched",
    "prepare:client": "pnpm run db:generate-client",
    "start": "pm2 start dist/main.js --name todo-list",
    "stop": "pm2 stop todo-list",
    "serve": "pm2-runtime start dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts",
    "prepare": "husky"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.16.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "prisma-zod-generator": "^1.18.8",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "pm2": "^6.0.10",
    "prisma": "^6.16.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.7.3",
    "unplugin-swc": "^1.5.7",
    "vitest": "^3.2.4",
    "zx": "^8.8.1"
  }
}
